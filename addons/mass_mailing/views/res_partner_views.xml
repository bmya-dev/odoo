<?xml version="1.0" ?>
<odoo>
    <record id="res_partner_view_form_inherit_mass_mailing" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.mass_mailing</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opt_out']" position="after">
                <field name="blacklist_reason" invisible="1"/>
                <field name="is_blacklisted" widget="blacklist_widget"/>
            </xpath>
        </field>
    </record>
</odoo>