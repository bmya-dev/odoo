<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="hr_resume_data_row">
    <tr t-attf-class="o_data_row #{isLast? 'o_data_row_last' : ''}" t-att-data-id="id">
        <td class="o_resume_timeline_cell position-relative pr-lg-2">
            <div class="rounded-circle bg-info position-relative"/>
        </td>
        <td class="o_data_cell o_list_number o_handle_cell text-center px-0">
            <span class="o_row_handle o_field_widget ui-sortable-handle bg-white px-2 border"
                  t-att-data-sequence="id">
                <i class="fa fa-bars small"/>
            </span>
        </td>
        <td class="o_data_cell text-wrap w-100 pl-lg-3">
            <div class="o_resume_line w-100 d-flex flex-column" t-att-data-id="id">
                <small class="o_resume_line_dates mb-2"><b t-esc="data.date_start"/> - <b t-esc="data.date_end"/></small>
                <h4 class="o_resume_line_title"><b t-esc="data.name"/></h4>
                <h5 t-if="data.position"><i t-esc="data.position"/></h5>
                <p t-if="data.description" t-esc="data.description" t-att-class="isLast? 'mb-0' : ''"/>
            </div>
        </td>
    </tr>
</t>

<t t-name="hr_trash_button">
    <td class="o_list_record_remove text-right">
        <button name="delete" arial-label="Delete entry" class="text-center px-2">
            <i class="fa fa-trash"/>
        </button>
    </td>
</t>

<t t-name="hr_resume_group_row">
    <tr class="o_resume_group_header shadow-none">
        <td colspan="100%"><div class="o_horizontal_separator mb-0"><t t-esc="display_name"/></div></td>
    </tr>
</t>

<t t-name="group_add_item">
    <tr class="o_resume_group_utilities">
        <td colspan="100%">
            <div class="o_field_x2many_list_row_add">
                <a href="#"
                    role="button"
                    class="btn btn-secondary btn-sm o-kanban-button-new"
                    t-attf-data-context="{{ context }}">ADD NEW</a>
            </div>
        </td>
    </tr>
</t>


</templates>
