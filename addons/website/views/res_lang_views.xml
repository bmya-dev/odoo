<?xml version="1.0"?>
<odoo>
    <record id="res_lang_form_inherit_website" model="ir.ui.view">
        <field name="name">res.lang.form.website.inherit</field>
        <field name="model">res.lang</field>
        <field name="inherit_id" ref="base.res_lang_form"/>
        <field name="arch" type="xml">
            <field name="iso_code" position="after">
                <field name="website_lang_code"/>
            </field>
        </field>
    </record>

    <record id="res_lang_tree_inherit_website" model="ir.ui.view">
        <field name="name">res.lang.tree.website.inherit</field>
        <field name="model">res.lang</field>
        <field name="inherit_id" ref="base.res_lang_tree"/>
        <field name="arch" type="xml">
            <field name="iso_code" position="after">
                <field name="website_lang_code"/>
            </field>
        </field>
    </record>
</odoo>
