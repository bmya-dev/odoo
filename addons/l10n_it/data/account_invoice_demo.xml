<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- add VAT, codice fiscal and tax system for main company -->
        <record id="base.main_company" model="res.company">
            <field name="vat">IT00410123456</field>
            <field name="codice_fiscale">0123456789987654</field>
            <field name="tax_system">RF01</field>
            <field name="zip">12345</field>
        </record>

        <record id="base.res_partner_1" model="res.partner">
            <field name="vat">IT11111111123</field>
        </record>
        <record id="base.res_partner_2" model="res.partner">
            <field name="vat">IT11111111234</field>
        </record>
        <record id="base.res_partner_12" model="res.partner">
            <field name="vat">IT11111112345</field>
        </record>

        <record id="tax_exoneration_1" model="account.tax">
            <field name="name">N1 escluse ex art. 15</field>
            <field name="has_exoneration">True</field>
            <field name="kind_exoneration">N1</field>
            <field name="amount">0</field>
            <field name="law_reference">Art. 15 DPR 633/72</field>
        </record>

        <record id="tax_exoneration_2" model="account.tax">
            <field name="name">N2 non soggette</field>
            <field name="has_exoneration">True</field>
            <field name="amount">0</field>
            <field name="kind_exoneration">N2</field>
            <field name="law_reference">Art. 1, c. 54-89, L. 190-2014</field>
        </record>

        <record id="tax_exoneration_3" model="account.tax">
            <field name="name">N3 non imponibili</field>
            <field name="has_exoneration">True</field>
            <field name="kind_exoneration">N3</field>
            <field name="amount">0</field>
            <field name="law_reference">NON IMPONIBILE ART. 9 NI A.9</field>
        </record>

        <record id="tax_exoneration_4" model="account.tax">
            <field name="name">N4 esenti</field>
            <field name="has_exoneration">True</field>
            <field name="kind_exoneration">N4</field>
            <field name="amount">0</field>
