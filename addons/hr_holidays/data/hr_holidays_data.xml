<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Casual leave -->
        <record id="holiday_status_cl" model="hr.leave.type">
            <field name="name" eval="'Legal Leaves '+time.strftime('%Y')"/>
            <field name="limit" eval="False"/>
            <field name="color_name">black</field>
            <field name="validity_start" eval="time.strftime('%Y-01-01')"/>
            <field name="validity_stop" eval="time.strftime('%Y-12-31')"/>
            <field name="leave_notif_subtype_id" eval="ref('mt_leave')"/>
            <field name="allocation_notif_subtype_id" eval="ref('mt_leave_allocation')"/>
        </record>

        <!-- Home working -->
        <record id="holiday_status_hw" model="hr.leave.type">
            <field name="name">Home Workings</field>
            <field name="limit" eval="False"/>
            <field name="employee_applicability">leave</field>
            <field name="color_name">lightgreen</field>
            <field name="leave_notif_subtype_id" eval="ref('mt_leave_home_working')"/>
        </record>

        <!-- Sick leave -->
        <record id="holiday_status_sl" model="hr.leave.type">
            <field name="name">Sick Leaves</field>
            <field name="limit" eval="True"/>
            <field name="color_name">red</field>
            <field name="leave_notif_subtype_id" eval="ref('mt_leave_sick')"/>
        </record>

        <!-- Compensatory Days -->
        <record id="holiday_status_comp" model="hr.leave.type">
            <field name="name">Compensatory Days</field>
            <field name="limit" eval="False"/>
            <field name="employee_applicability">leave</field>
            <field name="color_name">lavender</field>
            <field name="validity_start" eval="time.strftime('%Y-01-01')"/>
            <field name="validity_stop" eval="time.strftime('%Y-12-31')"/>
            <field name="leave_notif_subtype_id" eval="ref('mt_leave')"/>
        </record>

        <!--Unpaid Leave -->
        <record id="holiday_status_unpaid" model="hr.leave.type">
            <field name="name">Unpaid</field>
            <field name="color_name">brown</field>
            <field name="unpaid" eval="True"/>
            <field name="employee_applicability">leave</field>
            <field name="leave_notif_subtype_id" eval="ref('mt_leave_unpaid')"/>
        </record>
    </data>
</odoo>
