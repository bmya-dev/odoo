<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_view_blacklist_res_partner" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="base.view_partner_form"/>
        <field name="view_mode">kanban,tree,form</field>
        <field name="target">current</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a contact in your address book
          </p><p>
            Odoo helps you to easily track all activities related to a customer.
          </p>
        </field>
    </record>

    <record id="mail_mass_mailing_blacklist_view_tree" model="ir.ui.view">
        <field name="name">mail.mass_mailing.blacklist.tree</field>
        <field name="model">mail.mass_mailing.blacklist</field>
        <field name="arch" type="xml">
            <tree string="Email Blacklist">
                <field name="create_date" string="Blacklist Date"/>
                <field name="name"/>
                <field name="email"/>
                <field name="reason"/>
            </tree>
        </field>
    </record>

    <record id="mail_mass_mailing_blacklist_view_form" model="ir.ui.view">
        <field name="name">mail.mass_mailing.blacklist.form</field>
        <field name="model">mail.mass_mailing.blacklist</field>
        <field name="arch" type="xml">
            <form string="Add Email Blacklist">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. John Smith"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="email"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"  string="Blacklist Date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mail_mass_mailing_blacklist_view_search" model="ir.ui.view">
        <field name="name">mail.mass_mailing.blacklist.search</field>
        <field name="model">mail.mass_mailing.blacklist</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
            </search>
        </field>
    </record>

    <record id="mail_mass_mailing_blacklist_action" model="ir.actions.act_window">
        <field name="name">Blacklist</field>
        <field name="res_model">mail.mass_mailing.blacklist</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="mail_mass_mailing_blacklist_view_tree"/>
        <field name="search_view_id" ref="mail_mass_mailing_blacklist_view_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add an email address in the blacklist
          </p><p>
            Email addresses that are blacklisted means that the recipient won't receive any mass mailing anymore.
        </p>
        </field>
    </record>

    <!-- Technical Menu: -->
    <menuitem id="mail_mass_mailing_blacklist_menu" name="Blacklist" action="mail_mass_mailing_blacklist_action" parent="base.menu_email"/>
    <menuitem id="mail_mass_mailing_blacklist_mm_menu" name="Blacklist" action="mail_mass_mailing_blacklist_action" parent="menu_mass_mailing_configuration"/>

</odoo>
