<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-extend="GanttView.Row">
        <t t-jquery="p.text-truncate" t-operation="replace" t-if="widget.getParent().HasPillDuration">
            <span class="text-truncate" t-esc="pill.display_name"/>
            <div t-if="state == 'progress'" class="progress o_gant_mrp_progressbar">
                <div t-if="pill.state == 'progress'" class="progress-bar progress-bar-success" role="progressbar" t-attf-style="width: #{pill.duration}%;">
                  <t t-esc="pill.duration"/>%
                </div>
            </div>
        </t>
    </t>

    <t t-extend="gantt-popover">
        <t t-jquery="ul li:last-child" t-operation="after" t-if="DurationPopover">
            <li><strong>Complete Percentage:</strong> <t t-esc="duration"/>%</li>
            <li t-if="state == 'progress' &amp; duration &gt; 0 &amp; duration &lt; 100"><strong>Work Center:</strong> Unavailable</li>
        </t>
    </t>

</templates>
