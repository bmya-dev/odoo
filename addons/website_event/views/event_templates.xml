<template id="event_details">
    <t t-call="website_event.layout">
        <div itemscope="itemscope" itemtype="http://schema.org/Event">

            <section id="o_event_banner" class="ow_custom_image" t-att-data-event-id="event.id"
                t-attf-style="background-image: #{event.custom_banner_url or ('url(/openerp_website/static/src/img/2018/event_roadshow/top_banner.jpg)' if is_roadshow else 'none')};">
            <!-- <section id="o_event_banner" class="oe_img_bg oe_custom_bg bg-800 position-relative" t-att-data-event-id="event.id" t-attf-style="background-image: #{event.custom_banner_url};"> -->
                <!-- Option: Overlay -->
                <!-- <div id="o_we_banner_overlay" class="bg-black-50"/> -->
                <div class="container">
                    <div class="row pb-5">
                        <div class="col-lg-8 pt-5 pb-5">
                            <div class="o_event_header py-5">
                                <!-- <span t-if="event.is_participating" class="badge badge-pill px-3 py-2">Participating</span> -->
                                <h1 itemprop="name" t-field="event.name" class="display-4"/>
                                <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Registration Bar -->
