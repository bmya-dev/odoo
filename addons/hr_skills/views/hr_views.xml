<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_resume_line_search" model="ir.ui.view">
        <field name="name">hr.resume.search</field>
        <field name="model">hr.resume.line</field>
        <field name="arch" type="xml">
            <search string="Résume">
                <filter string="Resumé line type" name="group_by_resume_line_type" context="{'group_by':'line_type'}"/>
            </search>
        </field>
    </record>

    <record id="view_resume_line_form" model="ir.ui.view">
        <field name="name">hr.resume.line.form</field>
        <field name="model">hr.resume.line</field>
        <field name="arch" type="xml">
            <form string="Resumé">
                <field name="employee_id" invisible="1"/>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Title" required="True"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="line_type_id"/>
                        <field name="sequence"/>
                    </group>
                    <group>
                        <field name="date_start" required="True"/>
                        <field name="date_end"/>
                    </group>
                </group>
                <field name="description"/>
            </form>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit_resume" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.resume</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']" position="before">
                <page name="public" string="Resumé">
                    <div class="row">
                        <div class="col-lg-8 o_group_resume">
                            <!-- This field uses a custom tree view rendered by the 'hr_resume' widget.
                                Adding fields in the tree arch below makes them accessible to the widget
                            -->
                            <field class="" nolabel="1" name="resume_line_ids" widget="hr_resume">
                                <tree>
                                    <field name="line_type_id"/>
                                    <field name="name"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="employee_id"/>
                                </tree>
                            </field>
                        </div>
                        <div class="col-lg-4 o_group_skills">
                            <separator string="Skills"/>
                            <field nolabel="1" name="employee_skill_ids"  widget="hr_skills">
                                <tree>
                                    <field name="skill_type_id" invisible="1"/>
                                    <field name="employee_id" invisible="1"/>
                                    <field name="skill_id"/>
                                    <field name="skill_level_id"/>
                                    <field name="progress" widget="progressbar"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_hr_resume_type" model="ir.actions.act_window">
        <field name="name">Resumé Line Types</field>
        <field name="res_model">hr.resume.line.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_human_resources_configuration_resume"
            name="Resumé"
            parent="hr.menu_human_resources_configuration"
            sequence="4"
            groups="base.group_no_one"/>

    <menuitem
        id="hr_menu_resume_line_type"
        name="Types"
        action="action_hr_resume_type"
        parent="hr_skills.menu_human_resources_configuration_resume"
        sequence="3"
        groups="base.group_no_one"/>

    <!-- Skills -->

    <record id="view_employee_skill_level_tree" model="ir.ui.view">
        <field name="name">hr.skill.level.tree</field>
        <field name="model">hr.skill.level</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_skill_tree" model="ir.ui.view">
        <field name="name">hr.skill.tree</field>
        <field name="model">hr.skill</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_skill_level_form" model="ir.ui.view">
        <field name="name">hr.skill.level.form</field>
        <field name="model">hr.skill.level</field>
        <field name="arch" type="xml">
            <form string="Skill Level">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="progress" string="Progress (%)"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_skill_form" model="ir.ui.view">
        <field name="name">hr.employees.skill.form</field>
        <field name="model">hr.employee.skill</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <field name="employee_id" invisible="1"/>
                <sheet>
                    <group>
                        <group>
                            <field name="skill_type_id"/>
                            <field name="skill_id" domain="[('skill_type_id', '=', skill_type_id)]"/>
                        </group>
                        <group>
                            <field name="skill_level_id" domain="[('skill_type_id', '=', skill_type_id)]"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_skill_form" model="ir.ui.view">
        <field name="name">hr.skill.form</field>
        <field name="model">hr.skill</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_skill_type_tree" model="ir.ui.view">
        <field name="name">hr.skill.type.tree</field>
        <field name="model">hr.skill.type</field>
        <field name="arch" type="xml">
            <tree string="Skill Types">
                <field name="name"/>
                <field name="skill_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_skill_type_form" model="ir.ui.view">
        <field name="name">hr.skill.type.form</field>
        <field name="model">hr.skill.type</field>
        <field name="arch" type="xml">
            <form string="Skill Type">
                <field name="id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Skill Type" required="True"/>
                        </h1>
                    </div>
                    <group string="Skills">
                        <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                    </group>
                    <group string="Levels">
                        <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_skill_type" model="ir.actions.act_window">
        <field name="name">Skill Types</field>
        <field name="res_model">hr.skill.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="hr_menu_skill_type"
        name="Skills"
        action="action_hr_skill_type"
        parent="hr.menu_human_resources_configuration_employee"
        sequence="3"
        groups="base.group_no_one"/>
</odoo>


