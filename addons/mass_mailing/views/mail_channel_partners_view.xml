<?xml version="1.0" ?>
<odoo>
    <record id="mail_channel_view_form_inherit_blacklist" model="ir.ui.view">
        <field name="name">mail.channel.view.form.inherit.blacklist</field>
        <field name="model">mail.channel</field>
        <field name="inherit_id" ref="mail.mail_channel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_email']" position="after">
                <field name="blacklist_reason" invisible="1"/>
                <field name="is_blacklisted" widget="blacklist_widget"/>
            </xpath>
        </field>
    </record>

    <record id="mail_channel_partner_view_form_inherit_blacklist" model="ir.ui.view">
        <field name="name">mail.channel.partner.view.form.inherit.blacklist</field>
        <field name="model">mail.channel.partner</field>
        <field name="inherit_id" ref="mail.mail_channel_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="blacklist_reason" invisible="1"/>
                <field name="is_blacklisted" widget="blacklist_widget"/>
            </xpath>
        </field>
    </record>

    <record id="mail_channel_partner_view_tree_inherit_blacklist" model="ir.ui.view">
        <field name="name">mail.channel.partner.view.tree.inherit.blacklist</field>
        <field name="model">mail.channel.partner</field>
        <field name="inherit_id" ref="mail.mail_channel_partner_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="blacklist_reason" invisible="1"/>
                <field name="is_blacklisted" widget="blacklist_widget"/>
            </xpath>
        </field>
    </record>

</odoo>