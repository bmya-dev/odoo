<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="assets_frontend" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/scss" href="/website_event/static/src/scss/website_event.scss"/>
    </xpath>
    <xpath expr="//script[last()]" position="after">
        <script type="text/javascript" src="/website_event/static/src/js/website_geolocation.js"></script>
        <script type="text/javascript" src="/website_event/static/src/js/website_event.js"></script>
    </xpath>
</template>

<template id="assets_editor" inherit_id="website.assets_editor" name="Event Editor">
    <xpath expr="." position="inside">
        <script type="text/javascript" src="/website_event/static/src/js/website_event.editor.js"></script>
        <script type="text/javascript" src="/website_event/static/src/js/website.tour.event.js"></script>
        <script type="text/javascript" src="/website_event/static/src/js/website_event_banner.js"></script>
    </xpath>
</template>

<!-- Page -->
<template id="index" name="Events">
    <t t-call="website.layout">
        <div id="wrap">

            <!-- Add the possibility to change navbar colors -->
            <div id="we_toolbar" class="navbar navbar-light" style="background-color: #e9ecef !important;">
                <div class="container py-2">
                    <a href="/event" class="navbar-brand mr-4">
                        <h4 class="my-0">Events</h4>
                    </a>
                    <ul id="we_toolbar_filters" class="nav"/>
                    <a href="/event" class="small"><i class="fa fa-close mr-1"/>Reset</a>
                    <form id="we_toolbar_search" class="form-inline d-inline-block ml-auto">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search"/>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-search"/></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Drop Area -->
            <div class="oe_structure" id="oe_structure_website_event_index_1"/>

            <div class="container py-2">
                <div id="we_toolbar_pager" class="form-inline justify-content-center mb-3">
                    <t t-call="website.pager"/>
                </div>
            </div>

        <!-- Events List -->
        <div class="container" id="o_event_list_container">
            <div class="row">
                <div class="col" id="middle_column">
                    <div class="text-muted" t-if="not event_ids">
                        <h2>No event found</h2>
                        <p groups="event.group_event_manager">Use the top menu <i>'Content'</i> to create your first event.</p>
                    </div>
                    <!-- card-list / card-deck / card-group / card-columns -->
                    <div class="row">
                        <div t-foreach="event_ids" t-as="event" itemscope="itemscope" itemtype="http://schema.org/Event" class="col-lg-4">
                            <span t-if="event.is_online" class="badge py-1 px-2 badge-info">Online</span>
                            <span t-if="not event.website_published" class="badge py-1 px-2 badge-danger">Unpublished</span>
                            <!-- Event -->
                            <div t-attf-class="card #{event.is_participating and 'o_event_participating' or ''}">
                                <!-- OVERLAY -->
                                <div class="card-img-overlay p-0" itemprop="startDate">
                                    <div class="float-right bg-light text-center px-3 pb-4 pt-3 mr-3 day">
                                        <div t-esc="event.with_context(tz=event.date_tz).date_begin.strftime('%b')" class=""/>
                                        <div t-esc="event.with_context(tz=event.date_tz).date_begin.strftime('%d')" class="h4 m-0"/>
                                    </div>
                                </div>
                                <!-- IMG -->
                                <img src="/website_event/static/src/img/event_img_02.jpg" class="card-img-top" alt=""/>
                                <!-- BODY -->
                                <div class="card-body">
                                    <h5 class="card-title mb-0">
                                        <a itemprop="url" t-attf-href="/event/#{ slug(event) }/#{(not event.menu_id) and 'register' or ''}"><span itemprop="name" t-field="event.name"/></a>
                                    </h5>
                                    <small class="d-block text-muted mt-1 mb-3">Organized by <span t-field="event.organizer_id" /></small>
                                    <t t-if="not event.is_online">
                                        <span itemprop="location" t-field="event.address_id" t-options='{
                                            "widget": "contact",
                                            "fields": ["city"],
                                            "no_marker": "true"
                                            }'/>
                                    </t>
                                </div>
                                <!-- FOOTER -->
                                <div class="card-footer d-flex justify-content-between small">
                                   <t t-set="price">
                                        <span itemprop="price" content="0">
                                            <b>FREE</b>
                                        </span>
                                    </t>
                                    <!-- <span t-if="event.is_participating" class="text-uppercase">Participating</span> -->
                                    <t t-raw="price"/>
                                    <span t-if="event.event_type_id" class="text-nowrap text-truncate pl-2">
                                        <i class="fa fa-folder-open" role="img" aria-label="Event type" title="Event type"/>
                                        <a t-attf-href="/event?type=#{event.event_type_id.id}">
                                            <b t-esc="event.event_type_id.name"/>
                                        </a>
                                    </span>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
            <div class="form-inline justify-content-center my-3">
                <t t-call="website.pager"/>
            </div>
        </div>
        <div class="oe_structure" id="oe_structure_website_event_index_2"/>
      </div>
    </t>
</template>

<template id="event_right_column" inherit_id="website_event.index" active="False" customize_show="True" name="Content Column on the Right">
    <xpath expr="//div[@id='middle_column']" position="after">
        <div class="col-lg-3 oe_structure" id="right_column"/>
    </xpath>
</template>

<template id="event_right_photos" inherit_id="website_event.event_right_column" active="False" customize_show="True" name="Photos">
    <xpath expr="//div[@id='right_column']" position="inside">
        <figure class="figure o_figure_relative_layout w-100">
            <img class="figure-img img-fluid" src="/website_event/static/src/img/openerp_enterprise_of_the_year.png" alt=""/>
            <figcaption class="figure-caption text-center"><a href="/event">Photos of Past Events</a></figcaption>
        </figure>
        <figure class="figure o_figure_relative_layout w-100">
            <img class="figure-img img-fluid" src="/website_event/static/src/img/training.jpg" alt=""/>
            <figcaption class="figure-caption text-center"><a href="/event">Our Trainings</a></figcaption>
        </figure>
    </xpath>
</template>

<template id="event_right_quotes" inherit_id="website_event.event_right_column" active="False" customize_show="True" name="Quotes">
    <xpath expr="//div[@id='right_column']" position="inside">
        <div class="card mb-3 bg-secondary">
            <div class="card-body">
                <blockquote class="m-0">
                    <p>
                        <i>Write here a quote from one of your attendees.
                        It gives confidence in your
                        events.</i>
                    </p>
                    <small>Author</small>
                </blockquote>
            </div>
        </div>
    </xpath>
</template>

<template id="event_right_country_event" inherit_id="website_event.event_right_column" active="False" customize_show="True" name="Country Events">
    <xpath expr="//div[@id='right_column']" position="inside">
        <div class="card mb-3">
            <t t-call="website_event.s_country_events">
                <t t-set="_classes" t-value="'card-body'"/>
            </t>
        </div>
    </xpath>
</template>

<template id="event_left_column" active="True" inherit_id="website_event.index" customize_show="True" name="Filters Column on the Left">
    <!-- <xpath expr="//div[@id='middle_column']" position="before">
        <div class="col-lg-12 css_noprint" id="left_column"/>
    </xpath> -->
</template>

<template id="event_time" active="True" customize_show="True" inherit_id="website_event.index" name="Filter by Date">
    <xpath expr="//ul[@id='we_toolbar_filters']" position="inside">
        <!-- <i class="fa fa-sliders fa-rotate-270 mr-2"/>Filters -->
        <li class="nav-item dropdown">
            <a href="#" role="button" class="nav-link dropdown-toggle" data-toggle="dropdown"><span class="pr-2">Next Event</span></a>
            <div class="dropdown-menu">
                <t t-foreach="dates" t-as="date">
                    <t t-if="date[3] or (date[0] in ('old','all'))">
                        <a t-attf-href="/event?{{ keep_query('country', 'type', date=date[0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('date') == date[0] and ' active' or ''}"><t t-esc="date[1]"/>
                            <span t-if="date[3]" class="badge badge-primary ml-auto"><t t-esc="date[3]"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<template id="event_category" inherit_id="website_event.index" active="False" customize_show="True" name="Filter by Category">
    <xpath expr="//ul[@id='we_toolbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="nav-link dropdown-toggle" data-toggle="dropdown"><span class="pr-2">All Categories</span></a>
            <div class="dropdown-menu">
                <t t-foreach="types" t-as="type">
                    <t t-if="type['event_type_id']">
                        <a t-attf-href="/event?{{ keep_query('country', 'date', type=type['event_type_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('type') == str(type['event_type_id'] and type['event_type_id'][0]) and ' active' or ''}"><t t-esc="type['event_type_id'][1]"/>
                            <span class="badge badge-primary ml-auto"><t t-esc="type['event_type_id_count']"/></span></a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<template id="event_location" inherit_id="website_event.index" active="False" customize_show="True" name="Filter by Country">
    <xpath expr="//ul[@id='we_toolbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="nav-link dropdown-toggle" data-toggle="dropdown"><span class="pr-2">All countries</span></a>
            <div class="dropdown-menu">
                <t t-foreach="countries" t-as="country">
                    <t t-if="country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country=country['country_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == str(country['country_id'] and country['country_id'][0]) and ' active' or ''}">
                            <t t-esc="country['country_id'][1]"/>
                            <span class="badge badge-primary ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                    <t t-if="not country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country='online') }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == 'online' and ' active' or ''}">
                            <span>Online Events</span>
                            <span class="badge badge-primary ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<template id="event_edit_options" inherit_id="website.user_navbar" name="Edit Event Options">
    <xpath expr="//li[@id='edit-page-menu']" position="after">
        <t t-if="main_object._name == 'event.event'" t-set="action" t-value="'event.action_event_view'" />
    </xpath>
</template>
<template id="layout">
    <t t-call="website.layout">
        <div id="wrap" class="js_event o_website_event bg-200">
            <div id="we_submenu" class="container">
                <div t-if="not event.menu_id" id="event_menu" class="d-flex align-items-center py-2">
                    <a href="/event" class="btn btn-link mr-2"><i class="fa fa-long-arrow-left mr-2"/>All Events</a>
                    <a t-attf-href="/event?type=#{event.event_type_id.id}" t-if="event.event_type_id" class="nav-link"><i class="fa fa-folder mr-2"/><t t-esc="event.event_type_id.name"/></a>
                    <a t-attf-href="/event?country=#{event.country_id.id}" t-if="event.country_id" class="nav-link"><i class="fa fa-globe mr-2"/><t t-esc="event.country_id.name"/></a>
                    <span class="ml-auto" t-field="event.name"/>
                </div>
                <div t-else="" class="navbar navbar-expand-md navbar-light my-3">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#o_wevent_navbar_event_content">
                        <span class="navbar-toggler-icon"/>
                    </button>
                    <div class="collapse navbar-collapse" id="o_wevent_navbar_event_content">
                        <ul class="navbar-nav">
                            <t t-foreach="event.menu_id.child_id" t-as="submenu">
                                <t t-call="website.submenu">
                                    <t t-set="item_class" t-value="'nav-item'"/>
                                    <t t-set="link_class" t-value="'nav-link'"/>
                                </t>
                            </t>
                        </ul>
                    </div>
                </div>
            </div>
            <t t-raw="0"/>
            <div class="oe_structure" id="oe_structure_website_event_layout_1"/>
        </div>
    </t>
</template>

