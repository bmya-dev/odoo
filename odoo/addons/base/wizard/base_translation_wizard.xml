<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_translation_field_form" model="ir.ui.view">
        <field name="model">translationn.model</field>
        <field name="arch" type="xml">
            <form string="Translations" editable="top" create="false">
                <sheet>
                    <group>   
                        <field name="trans_ids">
                            <tree string="Translations" editable="top">
                                <field name="lang"/>
                                <field name="value"/>
                                <field name="source" invisible='True'/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" class="btn btn-primary" type="object" name="translation_confirm" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>