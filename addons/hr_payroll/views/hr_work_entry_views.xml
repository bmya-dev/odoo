<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_work_entry_action" model="ir.actions.act_window">
        <field name="name">Work entry</field>
        <field name="res_model">hr.work.entry</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar,gantt,tree,form,pivot</field>
    </record>

    <record id="hr_work_entry_gantt" model="ir.ui.view">
        <field name="name">hr.work.entry.gantt</field>
        <field name="model">hr.work.entry</field>
        <field name="arch" type="xml">
            <gantt string="Work entry"
                   date_start="date_start"
                   date_stop="date_stop"
                   color="work_entry_type_id"
                   default_group_by='employee_id'
                   decoration-secondary="state == 'validated'"
                   decoration-warning="display_warning">
                <field name="state"/>
                <field name="employee_id"/>
                <field name="display_warning"/>
                <field name="name"/>
            </gantt>
        </field>
    </record>

    <record id="hr_work_entry_calendar" model="ir.ui.view">
        <field name="name">hr.work.entry.calendar</field>
        <field name="model">hr.work.entry</field>
        <field name="arch" type="xml">
            <calendar string="Work entry"
                js_class="work_entries_calendar"
                date_start="date_start"
                date_stop="date_stop"
                mode="month"
                quick_add="False"
                color="work_entry_type_id"
                event_limit="5">
                <field name="state" invisible="1"/>
                <field name="display_warning" invisible="1"/>
                <!-- Sidebar favorites filters -->
                <field name="employee_id" write_model="hr.user.work.entry.employee" write_field="employee_id" avatar_field="image_small"/>
                <templates>
                    <t t-name="calendar-box">
                        <t t-set="color" t-value="widget.getColor(event.color_index)"/>
                        <div t-att-style="typeof color === 'string' ? ('background-color:'+color)+';' : ''" t-attf-class="#{record.is_highlighted &amp;&amp; record.is_highlighted.value ? 'o_event_hightlight' : ''} #{typeof color === 'number' ? 'o_calendar_color_'+color : ''}">
                            <div class="fc-time"/>
                            <div class="o_fields">
                                <t t-if="record.display_warning">
                                    <span class="fa fa-exclamation-triangle mr-2" aria-label="Conflict" title="error"/>
                                </t>
                                <t t-if="record.state == 'validated'">
                                    <span class="fa fa-check-circle-o mr-2" aria-label="Validated" title="validated"/>
                                </t>
                                <t t-foreach="widget.displayFields" t-as="name">
                                    <t t-esc="format(record, name)"/>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </calendar>
        </field>
    </record>

    <record id="hr_work_entry_form" model="ir.ui.view">
        <field name="name">hr.work.entry.form</field>
        <field name="model">hr.work.entry</field>
        <field name="arch" type="xml">
            <form string="Work entry" >
                <header>
                    <field name="display_warning" invisible="1"/>
                    <field name="leave_id" invisible="1"/>
                    <button string="Go To Conflicting Leave" name="action_leave" type="object" attrs="{'invisible': ['|', '|', '!',('display_warning', '=', True), ('leave_id', '=', False), ('work_entry_type_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div attrs="{'invisible': [('display_warning', '=', False)]}">
                        <div class="alert alert-warning" role="alert" attrs="{'invisible': ['!', ('work_entry_type_id', '=', False)]}">
                            This work entry cannot be validated.  The work_entry type is undefined.
                        </div>
                        <div attrs="{'invisible': [('work_entry_type_id', '=', False)]}">
                            <div class="alert alert-warning" role="alert" attrs="{'invisible': [('leave_id', '=', False)]}">
                                This work entry cannot be validated.  There is a leave to approve (or refuse) at the same time.
                            </div>
                            <div class="alert alert-warning" role="alert" attrs="{'invisible': ['!', ('leave_id', '=', False)]}">
                                This work entry cannot be validated. It is conflicting with at least one work_entry. <br/>
                                Two work_entries of the same employee cannot overlap at the same time.
                            </div>
                        </div>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Work entry Name" attrs="{'readonly': [('state', '=', 'validated')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="contract_id" readonly="1"/>
                            <field name="work_entry_type_id" attrs="{'readonly': [('state', '=', 'validated')]}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="leave_id" attrs="{'invisible': [('leave_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="date_start" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="date_stop" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <label for="duration" string="Period"/>
                            <div>
                                <field name="duration" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}" /><span class="ml8">Hours</span>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_work_entry_tree" model="ir.ui.view">
        <field name="name">hr.work.entry.tree</field>
        <field name="model">hr.work.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="work_entry_type_id"/>
                <field name="duration"/>
                <field name="state"/>
                <field name="date_start" string="Beginning"/>
                <field name="display_warning"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_work_entry_filter" model="ir.ui.view">
        <field name="name">hr.work.entry.filter</field>
        <field name="model">hr.work.entry</field>
        <field name="arch" type="xml">
            <search string="Search Work entry">
                <field name="employee_id"/>
                <field name="name"/>
                <filter string="My Work entries" domain="[('employee_id.user_id','=',uid)]" name="my_work_entries"/>
                <filter string="With error" domain="[('display_warning','=', True)]" name="work_entries_error"/>
                <filter name="date_filter" string="Date" date="date_start"/>
                <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                <filter name="group_work_entry_type" string="Type" context="{'group_by':'work_entry_type_id'}"/>
            </search>
        </field>
    </record>

    <record id="hr_work_entry_type_form" model="ir.ui.view">
        <field name="name">hr.work.entry.type.form</field>
        <field name="model">hr.work.entry.type</field>
        <field name="arch" type="xml">
            <form string="Work entry Type" >
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Work entry Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="is_leave"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.server" id="action_generate_payslips_from_work_entries">
            <field name="name">Generate payslips</field>
            <field name="model_id" ref="model_hr_payslip_employees"/>
            <field name="binding_model_id" ref="model_hr_payslip_employees" />
            <field name="state">code</field>
            <field name="code">
                action = env['hr.payslip.employees'].create({}).compute_sheet()
            </field>
        </record>

    <record id="action_view_hr_work_entry_type" model="ir.actions.act_window">
        <field name="name">Work entry Types</field>
        <field name="res_model">hr.work.entry.type</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

</odoo>
