<?xml version="1.0"?>
<odoo>
    <record id="crm_lead_view_form_inherit_mass_mailing" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.mass_mailing</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opt_out']" position="after">
                <field name="blacklist_reason" invisible="1"/>
                <field name="is_blacklisted" widget="blacklist_widget"/>
            </xpath>
        </field>
    </record>
</odoo>
