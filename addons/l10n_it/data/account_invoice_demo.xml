        </record>

        <record id="tax_exoneration_6" model="account.tax">
            <field name="name">N6 inversione contabile (per le operazioni in reverse charge ovvero nei casi di autofatturazione per acquisti extra UE di servizi ovvero per importazioni di beni nei soli casi previsti)</field>
            <field name="has_exoneration">True</field>
            <field name="kind_exoneration">N6</field>
            <field name="amount">0</field>
            <field name="law_reference">Ven Art17,6Â°c 633/72</field>
        </record>

        <record id="tax_exoneration_7" model="account.tax">
            <field name="name">N7 IVA assolta in altro stato UE (vendite a distanza ex art. 40 c. 3 e 4 e art. 41 c. 1 lett. b,  DL 331/93; prestazione di servizi di telecomunicazioni, tele-radiodiffusione ed elettronici ex art. 7-sexies lett. f, g, art. 74-sexies DPR 633/72)</field>
            <field name="has_exoneration">True</field>
            <field name="kind_exoneration">N7</field>
            <field name="amount">0</field>
            <field name="law_reference"> Art.....</field>
        </record>

        <!-- invoice demo -->
        <record id="demo_invoice_5" model="account.invoice">
            <field name="partner_id" ref="base.res_partner_12"/>
            <field name="user_id" ref="base.user_demo"/>
            <field name="payment_term_id" ref="account.account_payment_term"/>
            <field name="type">out_invoice</field>
            <field name="date_invoice" eval="time.strftime('%Y-%m')+'-02'"/>
        </record>
        <record id="demo_invoice_5_line_1" model="account.invoice.line">
            <field name="name" model="account.invoice.line" eval="obj().env.ref('product.consu_delivery_01').partner_ref"/>
            <field name="invoice_id" ref="demo_invoice_5"/>
            <field name="product_id" ref="product.consu_delivery_01"/>
            <field name="account_id" model="account.invoice.line" eval="obj().env.ref('product.consu_delivery_01').categ_id.property_account_income_categ_id.id"/>
            <field name="price_unit">574.0</field>
            <field name="quantity">2</field>
            <field name="invoice_line_tax_ids" model="account.tax"
                eval="[(6, 0, [obj().search([
                    ('kind_exoneration', '=', 'N1')], limit=1).id])]"/>
        </record>
        <record id="demo_invoice_5_line_2" model="account.invoice.line">
            <field name="name" model="account.invoice.line" eval="obj().env.ref('product.consu_delivery_03').partner_ref"/>
            <field name="invoice_id" ref="demo_invoice_5"/>
            <field name="product_id" ref="product.consu_delivery_03"/>
            <field name="account_id" model="account.invoice.line"  eval="obj().env.ref('product.consu_delivery_03').categ_id.property_account_income_categ_id.id"/>
            <field name="price_unit">270.0</field>
            <field name="quantity">5.0</field>
            <field name="invoice_line_tax_ids" model="account.tax"
                eval="[(6, 0, [obj().search([
                    ('type_tax_use', '=', 'purchase')], limit=1).id])]"/>
        </record>

        <function model="account.invoice" name="action_invoice_open">
            <value eval="[ref('demo_invoice_5')]"/>
        </function>
         <record id="demo_invoice_5" model="account.invoice">
            <field name="send_state">sent</field>
        </record>


        <record id="demo_invoice_6" model="account.invoice">
            <field name="partner_id" ref="base.res_partner_12"/>
