<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <t t-extend="mail.widget.Thread.Message">
        <t t-jquery=".o_thread_tooltip_container" t-operation="after">
            <span t-if="message.getType() === 'sms' and options.displaySmsIcons" class="o_thread_sms_tooltip_container">
                <t t-set="thread_icon_class" t-value="'o_thread_sms_tooltip o_thread_message_sms o_thread_message_sms_' + message.getSmsStatus()" />
                <t t-if="message.getSmsError()">
                    <t t-set="thread_icon_class" t-value="thread_icon_class + ' o_thread_message_sms_error'"/>
                </t>
                <i t-att-class="thread_icon_class + ' fa fa-comment'" t-att-data-message-id="message.getID()"/>
            </span>
        </t>
    </t>

    <t t-name="sms.widget.Thread.Message.SmsTooltip">
        <span class="d-inline-block text-center o_thread_tooltip_sms">
            <t t-if="status === 'sent'">
                <i class='fa fa-check o_thread_tooltip_sms_icon' title="Sent" role="img" aria-label="Sent"/>
            </t>
            <t t-elif="status === 'canceled'">
                <i class='fa fa-trash-o o_thread_tooltip_sms_icon' title="Canceled" role="img" aria-label="Canceled"/>
            </t>
            <t t-elif="status === 'pending'">
                <i class='fa fa-clock-o o_thread_tooltip_sms_icon' title="Awaiting Dispatch" role="img" aria-label="Awaiting Dispatch"/>
            </t>
            <t t-else="">
                <i class='fa fa-exclamation text-danger o_thread_tooltip_sms_icon' title="Error" role="img" aria-label="Error"/>
            </t>
            <span t-esc="recipient"/>
        </span>
    </t>

</template>
