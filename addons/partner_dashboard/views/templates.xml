<odoo>
    <data>

        <template id="dashboard">
            <t t-call="website.layout">
                <t t-set="title">Partner Dashboard</t>
                <div class="container">
                    <div class="row">
                        <h1>Partner Dashboard</h1>

                        <div class='col-md-8'>

                            <div class="" style="margin-bottom:5%">
                                <h3>Your Business</h3>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Your Company Informations</t>
                                        <t t-set="first_text">
                                            <span t-field="partner.image" t-options="dict(widget='image', style='float:right; max-width:100px;')"/>
                                            <strong><t t-esc='partner.name'/></strong>
                                            <br/>
                                            <div t-field='partner.self' t-options="dict(widget='contact', fields=['address', 'phone', 'email'], separator='\n')"/>
                                        </t>
                                        <t t-set="box_link">
                                            <a href="/partnerDashboard/createLead">Create my Profile</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Your Opportunities</t>
                                        <t t-set="first_text">
                                            Assigned Opportunities
                                        </t>
                                        <t t-set="big_text">
                                            <t t-esc="opportunities"/>
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Upgrade And Get Opporunities</a>
                                        </t>
                                    </t>
                                </div>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Your Company Information</t>
                                        <t t-set="first_text">
                                            Commission to receive
                                        </t>
                                        <t t-set="big_text">
                                            <t t-esc="purchase_total"/>
                                            <t t-esc="currency"/>
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Get from 10% up to 20% commission</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Your Sales</t>
                                        <t t-set="first_text">
                                            Entreprise Users
                                        </t>
                                        <t t-set="big_text">
                                            <t t-esc="enterprise_user" t-options="{ 'widget': 'integer'}" />
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Resell Odoo Enterprise</a>
                                        </t>
                                    </t>
                                </div>
                            </div>

                            <div style="margin-bottom:5%">
                                <h3>Learn</h3>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Product eLearning</t>
                                        <t t-set="first_text">
                                            Course Progression
                                        </t>
                                        <t t-set="big_text">
                                            0%
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Upgrade for full access</a>
                                            or
                                            <a href="#">Preview videos</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Product Certification</t>
                                        <t t-set="first_text">
                                            Certified Expert(s)
                                        </t>
                                        <t t-set="big_text">
                                            0
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Buy a Certification</a>
                                        </t>
                                    </t>
                                </div>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Partner Knowledge</t>
                                        <t t-set="first_text">
                                            Course Progression
                                        </t>
                                        <t t-set="big_text">
                                            0%
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Upgrade for full access</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Partner Mailing List</t>
                                        <t t-set="first_text">
                                            Subscribed Employees
                                        </t>
                                        <t t-set="big_text">
                                            0
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Add an employee</a>
                                        </t>
                                    </t>
                                </div>
                            </div>

                            <div style="margin-bottom:5%">
                                <h3>Develop And Deploy</h3>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Download</t>
                                        <t t-set="first_text">
                                            You can download Odoo Enterprise sources and Installers
                                        </t>
                                        <t t-set="big_text"/>
                                        <t t-set="box_link">
                                            <a href="#">Download Odoo Enterprise</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.addGithub">
                                        <t t-set="box_title">Enterprise Github Access</t>
                                        <t t-set="first_text">
                                            <form id="oe-github-add" t-attf-class="form-inline"
                                      action="/odoo-enterprise/github/add" method="post">

                                                <!-- t-if="authenticated and len(account.github_user_ids) &lt; max_github_users" -->

                                                <div class="form-group">
                                                    <input type="char" class="form-control"
                                                           name="github_username" placeholder="Github Username"/>
                                                </div>
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <!-- <input type="hidden" name="sub_uuid"
                                                       t-att-value="account.uuid"/> -->
                                                <button type="submit" class="oe-github-add btn btn-primary">
                                                    <i class="fa fa-user-plus" aria-hidden="true"></i> Add
                                                </button>
                                            </form>
                                            <!-- <div t-if="len(account.github_user_ids) == max_github_users"
                                                 class="alert alert-warning mt8" id="oe-github-limit">
                                                If you need access for more than <t t-esc='max_github_users'/>
                                                users, please contact our <a href="/help" target="_blank">Support</a>.
                                            </div>
                                            <div t-if="github_error_uniq" class="alert alert-danger mt8">
                                                The Github user <t t-esc="github_error_uniq"/> is already linked
                                                to another subscription. Please unlink it first or contact
                                                support if you don't know on which subscription this user is
                                                linked.
                                            </div> -->
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Access Enterprise repository</a>
                                        </t>
                                    </t>
                                </div>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Free Trial Extension</t>
                                        <t t-set="first_text">
                                            Extend Odoo Enterprise evaluation period for your prospects unsing this code:
                                            <p style="font-size:150%;">
                                                MY-AZPAZPAZPAZP
                                            </p>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Odoo.sh</t>
                                        <t t-set="first_text">
                                            Use this coupon to access Odoo.sh
                                            <p style="font-size:150%;">
                                                <t t-esc="my_sub"/>
                                            </p>
                                        </t>
                                        <t t-set="big_text"/>
                                        <t t-set="box_link">
                                            <a href="#">Subscribe Here</a>
                                        </t>
                                    </t>
                                </div>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Developers on Demand</t>
                                        <t t-set="first_text">
                                            <img src="https://s3.amazonaws.com/assets.mockflow.com/app/wireframepro/company/Cb6e449de8b4846dc8ed44e264d38c4e3/projects/D45a863afb911b6ae2baf1fae15c58a4e/images/Dd6917a4cd2acc68097e4caea158cf7d4"/>
                                        </t>
                                        <t t-set="box_link">
                                            <a href="/page/developers-on-demand">More Info</a>
                                        </t>
                                    </t>
                                </div>
                            </div>
                            <div style="margin-bottom:5%">
                                <h3>Marketing</h3>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Sponsor an Event</t>
                                        <t t-set="box_link">
                                            <i class="fa fa-file-o" style="margin-right:5px;"/><a href="#">Sponsorship Brochure</a>
                                        </t>
                                    </t>
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Success Story</t>
                                        <t t-set="first_text">
                                            Publish success stories on Odoo.com website
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Submit a Success Story</a>
                                        </t>
                                    </t>
                                </div>
                                <div class="row">
                                    <t t-call="partner_dashboard.infoBox">
                                        <t t-set="box_title">Brand Assets</t>
                                        <t t-set="first_text">
                                            You have the rights to use the Odoo trademark
                                        </t>
                                        <t t-set="box_link">
                                            <a href="#">Access all marketing materials</a>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-4'>
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-3" style="background-color:rgb(93, 183, 134); border-radius:10%; text-align: center">
                                        Ready Partner
                                    </div>
                                    <div class="col-md-3 col-md-offset-1" style="background-color:rgb(218, 222, 220); border-radius:10%; text-align: center">
                                        Silver Partner
                                    </div>
                                    <div class="col-md-3 col-md-offset-1" style="background-color:rgb(224, 184, 130); border-radius:10%; text-align: center">
                                        Gold Partner
                                    </div>
                                </div>
                                <div class="row" style="margin-top:5px;">
                                    <div class="col-md-4">
                                        <div class="col-md-5" style="font-size:200%">
                                            <t t-esc="int(25 - enterprise_user)"/>
                                        </div>
                                        <div class="col-md-7">
                                            Enterprise <br/> Users
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <p>
                                            Until you are uprgraded to <t t-esc="next_level"/> and start getting a <t t-esc="next_level_com"/> commission
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <h3>Statistics in <strong><t t-esc="country"/></strong></h3>
                                <t t-call="partner_dashboard.countryStat">
                                    <t t-set="stat_value" t-value="country_leads"/>
                                    <t t-set="stat_name">
                                        Leads
                                    </t>
                                </t>
                                <t t-call="partner_dashboard.countryStat">
                                    <t t-set="stat_value" t-value="country_partners"/>
                                    <t t-set="stat_name">
                                        Partners
                                    </t>
                                </t>
                                <t t-call="partner_dashboard.countryStat" t-if="country_customers >= country_partners * 2">
                                    <t t-set="stat_value" t-value="country_customers"/>
                                    <t t-set="stat_name">
                                        Customers
                                    </t>
                                </t>
                            </div>
                            <div class="row">
                                <img src="http://lemondedesetudes.fr/wp-content/uploads/2012/06/graph_faux_zero2.png" style="width:100%;"/>
                            </div>
                            <div class="row">
                                <div style='col-md-12'>
                                    <h3>Your Point of Contact</h3>
                                    <p>
                                        <span t-field="saleman.image" t-options="dict(widget='image', style='float:left; max-width:100px;')"/>
                                        <strong><t t-esc='saleman.name'/></strong>
                                        <br/>
                                        <t t-esc='saleman.function'/>
                                        <div t-field='saleman.self' t-options="dict(widget='contact', fields=['phone', 'email'], separator='\n')"/>
                                    </p>
                                </div>
                            </div>
                            <div calss="row">
                                <h3>Legal Documents</h3>
                                <i class="fa fa-file-o" style="margin-right:5px;"/><a href="#">Odoo Partnership Agreement</a><br/>
                                <i class="fa fa-file-o" style="margin-right:5px;"/><a href="#">Odoo Enterprise Agreement</a><br/>
                                <i class="fa fa-file-o" style="margin-right:5px;"/><a href="#">Odoo.sh Terms of Use</a><br/>
                                <i class="fa fa-file-o" style="margin-right:5px;"/><a href="#">Terms of Sale</a>
                            </div>
                            <div calss="row">
                                <div style='col-md-12'>
                                    <h3>Useful Videos</h3>
                                    <iframe width="100%" height="100%" src="https://www.youtube.com/embed/vt1Pwfnh5pc?rel=0&amp;controls=0" frameborder="0" allow="autoplay; encrypted-media"></iframe>
                                    <p>
                                        <a href="#">See all videos ></a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="infoBox">
            <div class="col-md-6" style="height:300px;">
                <h4 style="background-color:#dcdcdc; padding: 5px"><t t-esc="box_title"/></h4>
                <p style="font-size:110%;">
                    <t t-if="big_text != ''">
                        <span style="font-size:200%;float:left; margin:5px;">
                            <t t-esc="big_text"/>
                        </span>
                    </t>
                    <t t-raw="first_text"/>
                </p>
                <p style="clear:both;">
                    <t t-raw="box_link"/>
                </p>
            </div>
        </template>

        <template id="addGithub">
            <div class="col-md-6" style="height:250px;">
                <h4 style="background-color:#dcdcdc; padding: 5px"><t t-esc="box_title"/></h4>
                <p>
                    <t t-raw="box_link"/>
                </p>
                <p style="font-size:110%;">
                    <t t-raw="first_text"/>
                </p>

            </div>
        </template>

        <template id="countryStat">
            <div class='col-md-4'>
                <p style="text-align:center;">
                    <strong><t t-esc="stat_value"/></strong>
                    <br/>
                    <t t-esc="stat_name"/>
               </p>
            </div>
        </template>

        <template id="leadFormTemp">
            <t t-call="website.layout">
                <t t-set="title">Partner Dashboard</t>
                <div class="container">
                    <form id="leadForm">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Name</h4><br/>
                                <input class="form-control" type="text" id="id"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <h4>Email</h4><br/>
                                <input class="form-control" type="email" id="email"/>
                            </div>
                            <div class="col-md-6">
                                <h4>Phone</h4><br/>
                                <input class="form-control" type="tel" id="phone"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <h4>Company Name</h4><br/>
                                <input class="form-control" type="text" id="company_id"/>
                            </div>
                            <div class="col-md-6">
                                <h4>TIN/VAT</h4><br/>
                                <input class="form-control" type="number" id="vat"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Street and Number</h4><br/>
                                <input class="form-control" type="text" id="street"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Street 2</h4><br/>
                                <input class="form-control" type="text" id="street2"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-8">
                                <h4>City</h4><br/>
                                <input class="form-control" type="text" id="city"/>
                            </div>
                            <div class="col-md-4">
                                <h4>Zip Code</h4><br/>
                                <input class="form-control" type="number" id="zip"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <h4>Country</h4><br/>
                                <input class="form-control" type="text" id="country_id"/>
                            </div>
                            <div class="col-md-6">
                                <h4>State/Province</h4><br/>
                                <input class="form-control" type="text" id="province"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <h4>Logo</h4><br/>
                                <input class="form-control" type="file" id="logo" aria-describedby="fileHelp"/>
                                <small id="fileHelp" class="form-text text-muted">.png or.jpg image file</small>
                            </div>
                            <div class="col-md-3 col-md-offset-3">
                                <img src="Lol" id="profile-img-tag"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <h4>Your summary</h4><br/>
                                <textarea class="form-control" id="summary"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-secondary">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </t>
        </template>

    </data>
</odoo>