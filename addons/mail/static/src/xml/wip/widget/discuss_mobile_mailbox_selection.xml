<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="mail.wip.widget.DiscussMobileMailboxSelection" owl="1"
         class="o_mobile_mailbox_selection">
        <t t-foreach="mailboxes" t-as="mailbox">
            <t t-set="$thread" t-value="mailbox.localID"/>
            <button class="btn"
                    type="button"
                    t-att-class="active($thread) ? 'btn-primary' : 'btn-secondary'"
                    t-key="$thread"
                    t-on-click="_onClick({ $thread })">
                <t t-esc="mailbox.name"/>
            </button>
        </t>
    </div>

</templates>
