<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="init_view_company_form" model="ir.ui.view">
            <field name="name">account.accountant.init.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="after">
                    <footer>
                        <button string="Mark as done" type="object" name="mark_company_setup_as_done_action" class="oe_highlight"/>
                        <button string="Save" type="action" name="account_accountant.init_wizard_refresh_view"/>
                    </footer>
                </xpath>
            </field>
        </record>

        <record id="init_financial_year_opening_form" model="ir.ui.view">
            <field name="name">account.accountant.financial.year.op.wizard.form</field>
            <field name="model">accountant.financial.year.op</field>
            <field name="arch" type="xml">
                <form>
                    <div class="row">
                        <div class="col-xs-4">
                            <label for="opening_date"/>
                        </div>
                        <div class="col-xs-8">
                            <field name="opening_move_posted" invisible="1"/>
                            <field name="opening_date" attrs="{'readonly': [('opening_move_posted', '=', True)]}"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <strong>End of fiscal year</strong>
                        </div>
                        <div class="col-xs-4">
                            <field name="fiscalyear_last_day"/>
                        </div>
                        <div class="col-xs-4">
                            <field name="fiscalyear_last_month"/>
                        </div>
                    </div>
                    <footer>
                        <button string="Save" type="action" name="account_accountant.init_wizard_refresh_view" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="init_bank_journal_form" model="ir.ui.view">
            <field name="name">account.accountant.init.bank.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_bank_journal_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="after">
                    <footer>
                    <button string="Mark as done" type="object" name="mark_bank_setup_as_done_action" class="oe_highlight"/>
                        <button string="Save" type="action" name="account_accountant.init_wizard_refresh_view"/>
                    </footer>
                </xpath>
            </field>
        </record>

        <record id="init_opening_move_wizard_form" model="ir.ui.view">
            <field name="name">account.accountant.init.opening.move.wizard.form</field>
            <field name="model">accountant.opening</field>
            <field name="arch" type="xml">
                <form>
                    <h1>Opening move</h1>

                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="adjustment_account_id"/>
                        </group>
                    </group>

                    <field name="company_id" invisible="1"/>
                    <field name="opening_move_line_ids" context="{'tree_view_ref': 'account_accountant.init_opening_move_lines_tree'}"/>

                    <footer>
                        <button string="Post" name="validate" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="init_opening_move_lines_tree" model="ir.ui.view">
            <field name="name">account.accountant.init.opening.move.lines.tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Journal Items">
                    <field name="account_id" domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                    <field name="name"/>
                    <field name="amount_currency" groups="base.group_multi_currency"/>
                    <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                    <field name="debit" sum="Total Debit"/>
                    <field name="credit" sum="Total Credit"/>
                </tree>
            </field>
        </record>

        <record id="init_accounts_tree" model="ir.ui.view">
            <field name="name">account.accountant.init.opening.move.line.tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree editable="top" create="1" delete="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="user_type_id"/>
                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                    <field name="opening_debit"/>
                    <field name="opening_credit"/>
                </tree>
            </field>
        </record>

        <record id="action_accounts_setup_tree" model="ir.actions.act_window">
            <field name="name">Accounts setup</field>
            <field name="res_model">account.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="account.view_account_search"/>
            <field name="view_id" ref="init_accounts_tree"/>
        </record>

        <record id="init_wizard_refresh_view" model="ir.actions.client">
            <!-- We reload everything instead of just closing the wizard, because the
            setup bar needs to be refreshed. -->
            <field name="name">account.accountant.init.wizard.refresh.action</field>
            <field name="tag">reload</field>
        </record>

    </data>
</odoo>