<?xml version="1.0"?>
<odoo>
    <record id="res_users_form_view" model="ir.ui.view">
        <field name="name">res.users.form.sale.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights_technical']" position="inside">
                <group>
                    <field name="field_group_warning_sale" groups="base.group_no_one"/>
                    <field name="field_group_sale_layout" groups="base.group_no_one"/>
                    <field name="field_group_delivery_invoice_address" groups="base.group_no_one"/>
                    <field name="field_group_show_price_subtotal" groups="base.group_no_one"/>
                    <field name="field_group_show_price_total" groups="base.group_no_one"/>
                    <field name="field_group_discount_per_so_line" groups="base.group_no_one"/>
                    <field name="field_group_proforma_sales" groups="base.group_no_one"/>
                    <field name="field_group_analytic_accounting" groups="base.group_no_one"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>