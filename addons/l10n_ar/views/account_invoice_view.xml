<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">invoice.search</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <group position="inside">
                <filter string="State" domain="[]" name="l10n_ar_state_id_filter" context="{'group_by':'l10n_ar_state_id'}"/>
            </group>
        </field>
    </record>

    <record id="view_invoice_form" model="ir.ui.view">
        <field name="name">l10n_ar_account invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="l10n_latam_documents.view_invoice_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="l10n_ar_afip_pos_type" invisible="1"/>
                <field name="l10n_ar_letter" invisible="1"/>
                <field name="l10n_ar_force_afip_concept" invisible="1"/>
            </form>
            <div groups="base.group_multi_currency" position="after">
                <!-- <field name="old_currency_rate" attrs="{'invisible': [('old_currency_rate', '=', False)]}"/> -->
                <field name="l10n_ar_currency_rate" attrs="{'invisible': [('l10n_ar_currency_rate', '=', False)]}"/>
            </div>

            <field name="journal_id" position="after">
                <field name="l10n_ar_afip_responsability_type" states="open,paid"/>
            </field>

            <field name="payment_term_id" position="after">
                <!-- if poitn of sale = false then not argentina journal -->
                <field name="l10n_ar_afip_incoterm_id" attrs="{'invisible': [('l10n_ar_letter', '!=', 'E')]}"/>
                <field name='l10n_ar_afip_concept' attrs="{'invisible':[('l10n_ar_afip_pos_type', 'not in', ['online', 'electronic'])]}"/>
                <label for="l10n_ar_afip_service_start" attrs="{'invisible':[('l10n_ar_afip_concept','not in',['2', '3', '4'])]}" string="Service Date"/>
                <div attrs="{'invisible':[('l10n_ar_afip_concept','not in',['2', '3', '4'])]}" >
                    <field name="l10n_ar_afip_service_start" class="oe_inline"/> to <field name="l10n_ar_afip_service_end" class="oe_inline"/>
                </div>
            </field>
        </field>
    </record>

    <record id="view_supplier_invoice_form" model="ir.ui.view">
        <field name="name">l10n_ar_account supplier.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="l10n_latam_documents.view_supplier_invoice_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="l10n_ar_afip_responsability_type" states="open,paid"/>
            </field>
        </field>
    </record>

</odoo>
