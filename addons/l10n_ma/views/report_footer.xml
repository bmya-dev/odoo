<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_boxed_inherit" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[@class='text-center']//ul" position="inside">
            <li t-if="company.country_id.code == 'MA' and company.l10n_ma_ice" class="list-inline-item">
                Ice: <span t-field="company.l10n_ma_ice"/>
            </li>
        </xpath>
    </template>
    <template id="external_layout_clean_inherit" inherit_id="web.external_layout_clean">
        <xpath expr="//div[hasclass('footer','o_clean_footer')]//span[@class='company_address']" position="after">
            <t t-if="company.country_id.code == 'MA' and company.l10n_ma_ice">
                Ice: <span t-field="company.l10n_ma_ice"/>
            </t>
        </xpath>
    </template>
    <template id="external_layout_standard_inherit" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@class='text-center']//ul" position="inside">
            <li t-if="company.country_id.code == 'MA' and company.l10n_ma_ice" class="list-inline-item">
                Ice: <span t-field="company.l10n_ma_ice"/>
            </li>
        </xpath>
    </template>
    <template id="external_layout_background_inherit" inherit_id="web.external_layout_background">
        <xpath expr="//div[@class='text-center']//ul" position="inside">
            <li t-if="company.country_id.code == 'MA' and company.l10n_ma_ice" class="list-inline-item">
                Ice: <span t-field="company.l10n_ma_ice"/>
            </li>
        </xpath>
    </template>
</odoo>
