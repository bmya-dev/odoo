        </function>
        <record id="demo_invoice_6" model="account.invoice">
            <field name="send_state">delivered_accepted</field>
        </record>


        <record id="demo_invoice_7" model="account.invoice">
            <field name="partner_id" ref="base.res_partner_2"/>
