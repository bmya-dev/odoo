        <field name="name">l10n_ar.afip.incoterm.tree</field>
        <field name="model">l10n_ar.afip.incoterm</field>
        <field name="arch" type="xml">
            <tree string="AFIP Incoterms">
                <field name='afip_code'/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_l10n_ar_afip_incoterm">
        <field name="name">AFIP Incoterms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ar.afip.incoterm</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Incoterms" action="act_l10n_ar_afip_incoterm" id="menu_action_l10n_ar_afip_incoterm" sequence="20" parent="menu_afip_config"/>

