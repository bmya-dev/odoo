<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="website_mass_mailing.popup">
        <div class="modal fade o_newsletter_modal" t-att-id="modalID" t-attf-data-backdrop="#{isEditMode ? 'false' : 'true'}" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content rounded-0">
                    <div class="modal-header p-0">
                        <span class="btn btn-default text-center rounded-circle o_popup_close o_not_editable fa fa-close" data-dismiss="modal"/>
                    </div>
                    <div class="modal-body oe_structure">
                        <t t-raw="content"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
