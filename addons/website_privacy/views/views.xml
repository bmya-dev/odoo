<odoo>
  <data>

    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">Privacy settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
          <group name="social" position="after">
            <group name="privacy" string="Privacy">
              <label for="ga_anonymize_ip" />
              <div name="ga_anonymize_ip" >
                  <div class="oe_inline">
                      <field name="ga_anonymize_ip"/> Anonymize the IP addresses of hits sent to Google Analytics
                  </div>
              </div>
              <label for="cookies_bar" />
              <div name="cookies_bar" >
                  <div class="oe_inline">
                      <field name="cookies_bar"/> Add a simplified bar on your website to say that you use cookies
                  </div>
              </div>

              <label for="cookies_bar_msg" class="ml32" attrs="{'invisible':[('cookies_bar','=',False)]}"/>
              <div name="cookies_bar_msg" attrs="{'invisible':[('cookies_bar','=',False)]}">
                  <div class="oe_inline">
                      <field name="cookies_bar_msg" />
                  </div>
              </div>
              <label for="cookies_bar_btn" class="ml32" attrs="{'invisible':[('cookies_bar','=',False)]}"/>
              <div name="cookies_bar_btn" attrs="{'invisible':[('cookies_bar','=',False)]}">
                  <div class="oe_inline">
                      <field name="cookies_bar_btn"/>
                  </div>
              </div>

              <field name="module_auth_signup" invisible="1" />
              <field name="signup_consent" attrs="{'invisible':[('module_auth_signup','=', False)]}"/>
              <field name="signup_consent_msg" attrs="{'invisible':['|', ('module_auth_signup','=',False), ('signup_consent','=',False)]}"/>
              <field name="signup_force_checkbox" attrs="{'invisible':['|', ('module_auth_signup','=',False), ('signup_consent','=',False)]}"/>


              <field name="module_website_form" invisible="1" />
              <label for="website_form_meta" attrs="{'invisible':[('module_website_form','=', False)]}"/>
              <div name="website_form_meta" attrs="{'invisible':[('module_website_form','=', False)]}">
                  <div class="oe_inline">
                      <field name="website_form_meta"/> Add meta data (IP, User Agent, Referer, ...) into the record created from your forms
                  </div>
              </div>

              <field name="module_website_sale" invisible="1" />
              <label for="website_sale_show_cgv" attrs="{'invisible':[('module_website_sale', '=', False)]}"/>
              <div name="website_sale_show_cgv" attrs="{'invisible':[('module_website_sale', '=', False)]}">
                  <div class="oe_inline">
                      <field name="website_sale_show_cgv"/> Add a checkbox on the ecommerce checkout to valid CGV before to confirm an order
                  </div>
              </div>
            </group>
          </group>
        </field>
    </record>

  </data>
</odoo>